generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Offer {
  id              Int      @id @default(autoincrement())
  name            String
  geoId           Int
  geo             Geo      @relation(fields: [geoId], references: [id])
  price           String
  discount        String
  previewImageUrl String
  link            String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  Form Form[]
}

model Form {
  id        Int      @id @default(autoincrement())
  offerId   Int
  offer     Offer    @relation(fields: [offerId], references: [id])
  name      String
  template  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Geo       Geo?     @relation(fields: [geoId], references: [id])
  geoId     Int?
}

model Geo {
  id        Int      @id @default(autoincrement())
  code      String   @unique
  name      String
  currency  String
  language  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  offers Offer[]
  forms  Form[]
}
